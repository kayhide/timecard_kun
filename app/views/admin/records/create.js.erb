$('#new_record').before("<%=j render('admin/records/record', record: @record) %>");
$('#<%= dom_id @record %>').hide();
$('#<%= dom_id @record %>').fadeIn('slow');
$('#<%= dom_id @record %> .editable').editable();
$('#<%= dom_id @record %> .editable-following').fadeIn();
setTimeout(() => {
  $('#new_record .editable').editable('setValue', null);
});
